
@{
    ViewBag.Title = "Docente";
}



<div class="row">
    <form method="POST" action="/ProgramaAcademico/Docente">


    <div class="row">
        <div class="input-field col s6">
            <input id="Documento" type="text" class="validate">
            <label for="Documento">Documento</label>
        </div>
    </div>


    <label>Tipo de Documento</label>
    <select class="browser-default">
        <option value="" disabled selected>Opciones</option>
        <option value="1">CC</option>
        <option value="2">CE</option>
        <option value="3">TI</option>
    </select>

    <div class="row">
        <div class="input-field col s6">
            <input placeholder="" id="Nombre" type="text" class="validate">
            <label for="Nombre">Nombre</label>
        </div>
        <div class="input-field col s6">
            <input id="Apellido" type="text" class="validate">
            <label for="Apellido">Apellido</label>
        </div>
    </div>

    <div class="row">
        <label>Fecha de Nacimiento</label>
        <input type="date" class="datepicker" />
    </div>


    <div class="row">
        <div class="input-field col s6">
            <input id="Direccion" type="text" class="validate">
            <label for="Direccion">Dirección</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            <input id="Celular" type="text" class="validate">
            <label for="Celular">Celular</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            <input id="Ciudad" type="text" class="validate">
            <label for="Ciudad">Ciudad</label>
        </div>
    </div>

    <div class="col s6">
        <div class="input-field">
            <input id="email" type="email" class="validate">
            <label for="email" data-error="wrong" data-success="right">Email</label>
        </div>
    </div>

    <button class="btn waves-effect waves-light" type="submit" name="action">
        <i class="material-icons right">Guardar</i>
    </button>


        <input type="button" onclick="history.back()" name="volver atrás" value="volver atrás" />

    </form>

</div>





<script>
  



    $('.numero').keyup(function () {
        this.value = this.value.replace(/[^ 0-9]/g, '');
    });

    $('#Estudiante').submit(function (event) {
        if ($('#Documento').val().length < 6) {
            mensaje.warning('El numero de documento debe tener minimo seis digitos');
            return false;
        }

       
        
        }



    );


    mensaje = {};
    mensaje.warning = function (texto) {
        $('#mensaje_placeholder').
        html('<div class="alert alert-danger">' +
        '<a class= "close" data-dismiss="alert">x</a><span>'
        + texto + '</span></div>');

    };

    
        
        


    


</script>